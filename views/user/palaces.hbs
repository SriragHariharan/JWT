<div class="container">
    <div class="row">
            {{#each palaces}}
        <div class="col-6 col-sm-6 col-md-3 mt-5">
            <div class="card m-2" style="width: 15rem; height:400px; border:none;">
                <img src="{{this.url}}" class="card-img-top" alt="..." width="400px" height="200px">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
        </div>
            {{/each}}
    </div>
</div>