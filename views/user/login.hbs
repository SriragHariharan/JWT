<div class="container">
    <div class="row">
        <div class="col-5 m-auto ">

            
<form method="post" action="/login/" class="mt-5">
<h3 class="text-center mb-4">LOGIN</h3>

  {{#if authFailed}}
    <h5 class="text-center mb-4 p-2" style="background-color: aqua;">{{authFailed}}</h5>
  {{/if}}
  

  <!-- Email input -->
  <div class="form-outline mb-4">
    <label class="form-label" for="form2Example1">Email address</label>
    <input type="email" value="srirag@google.com" name="email" class="form-control" />
  </div>

  <!-- Password input -->
  <div class="form-outline mb-4">
    <label class="form-label" for="form2Example2">Password</label>
    <input type="password" value="abc123" name="password" class="form-control" />
    <p style="color: red;">{{pwdError}}</p>
  </div>

<input type="submit" value="Login" class="btn-primary float-right">

  <!-- Register buttons -->
  <div class="text-center">
    <p>Not a member? <a href="/signup/">Register</a></p>   
  </div>
</form>

        </div>
    </div>
</div>



